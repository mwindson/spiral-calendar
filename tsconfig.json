{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noStrictGenericChecks": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "src/", // This must be specified if "paths" is.
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    ".tmp",
    "build"
  ]
}